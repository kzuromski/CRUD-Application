@model CRUD.Models.Reader

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Reader</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BorrowDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BorrowDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Borrows)
        </dt>
            <dd>
                <table class="table">
                    <tr>
                        <th>Title </th>
                        <th>Author </th>
                        <th>Category </th>
                    </tr>
                    @foreach (var item in Model.Borrows)
                    { 
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Book.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Book.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Book.Category)
                            </td>
                        </tr>
                    }
                </table>
            </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
